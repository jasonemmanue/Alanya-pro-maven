<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0" spacing="20.0" style="-fx-background-color: #2C3E50; -fx-padding: 40;" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.Alanya.AdminLoginController">
   <children>
      <Label text="Admin Panel Login" textFill="WHITE">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <TextField fx:id="usernameField" promptText="Username" style="-fx-max-width: 250;" />
      <PasswordField fx:id="passwordField" promptText="Password" style="-fx-max-width: 250;" />
      <Button fx:id="loginButton" onAction="#handleAdminLogin" text="Login" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-weight: bold;" />
      <Label fx:id="errorLabel" textFill="#E74C3C" />
   </children>
</VBox>