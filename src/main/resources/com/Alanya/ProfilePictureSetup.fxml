<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.Alanya.ProfilePictureSetupController">
   <center>
      <VBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Label style="-fx-font-size: 1.5em; -fx-font-weight: bold;" text="Changer ma photo de profil" />
            <ImageView fx:id="previewImageView" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
               <clip>
                  <Circle centerX="75.0" centerY="75.0" radius="75.0" />
               </clip>
            </ImageView>
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleChooseFile" text="Choisir un fichier" />
                  <Button mnemonicParsing="false" onAction="#handleTakePicture" text="Prendre une photo" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" prefHeight="50.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#handleFinish" style="-fx-background-color: #2ECC71; -fx-text-fill: white;" text="Terminer" />
         </children>
         <padding>
            <Insets bottom="10.0" right="20.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>