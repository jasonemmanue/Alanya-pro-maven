<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="700.0" prefWidth="1000.0" stylesheets="@chat-styles.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.Alanya.AdminPanelController">
   <children>
      <VBox HBox.hgrow="NEVER" prefWidth="250.0" style="-fx-border-color: #CCCCCC; -fx-border-width: 0 1px 0 0;">
         <children>
            <Label alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-background-color: #075E54;" text="Conversations Support" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
            <ListView fx:id="conversationList" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
      <VBox HBox.hgrow="ALWAYS">
         <children>
            <Label fx:id="chatHeaderLabel" alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-background-color: #075E54;" text="Sélectionnez une conversation" textFill="WHITE" VBox.vgrow="NEVER">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </padding>
            </Label>
            <ScrollPane fx:id="adminMessageScrollPane" fitToWidth="true" VBox.vgrow="ALWAYS">
               <content>
                  <VBox fx:id="selectedUserChatArea" spacing="5.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
            <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
               <children>
                  <TextArea fx:id="adminReplyInput" prefHeight="40.0" promptText="Écrivez votre réponse..." HBox.hgrow="ALWAYS" />
                  <Button fx:id="sendReplyButton" mnemonicParsing="false" text="Envoyer" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</HBox>