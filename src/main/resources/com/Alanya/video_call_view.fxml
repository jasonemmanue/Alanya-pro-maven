<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.Alanya.VideoCallController">
   <center>
      <StackPane fx:id="videoPane" styleClass="call-pane-left" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="remoteVideoView" fitHeight="580.0" fitWidth="980.0" pickOnBounds="true" preserveRatio="true" styleClass="video-pane" />
            
            <ImageView fx:id="localVideoView" pickOnBounds="true" preserveRatio="true" styleClass="video-pane" />

             <Label fx:id="callTimerLabel" styleClass="info-label" text="00:00" StackPane.alignment="TOP_CENTER">
               <StackPane.margin>
                  <Insets top="10.0" />
               </StackPane.margin>
            </Label>
         </children>
      </StackPane>
   </center>
   <bottom>
      <VBox alignment="CENTER" prefHeight="100.0" styleClass="bottom-controls" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" spacing="30.0">
               <children>
                  <ToggleButton fx:id="muteButtonVideo" mnemonicParsing="false" onAction="#handleMuteToggle" styleClass="mute-button" text="Couper Son" />
                  <Button fx:id="hangUpButtonVideo" mnemonicParsing="false" onAction="#handleHangUpVideo" styleClass="hang-up-button" text="Raccrocher" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" top="10.0" />
         </padding>
      </VBox>
   </bottom>
</BorderPane>